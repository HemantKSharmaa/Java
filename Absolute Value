import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
      
      
      int n;
      
      
      Scanner input = new Scanner(System.in);
      n = input.nextInt();
      
      if(n==0){
        System.out.println("0");
      }
      
      int m = -(n);
      
      if(n>0){
        System.out.println(n);
      }
      else if(n<0){
        System.out.println(m);
      }
      
      
  }
}
