import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
      
      int n,sum=0;
      
      Scanner input = new Scanner(System.in);
      n = input.nextInt();
      
      for(int i=0; i<=n; ++i){
        sum = sum+i;
      }
      
      System.out.println(sum);
  }
}
